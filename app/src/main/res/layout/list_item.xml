<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentStart="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"/>



    <TextView
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:textColor="#ff000000"
        android:layout_height="wrap_content"
        android:text="templateName"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/editeur"
        android:layout_width="match_parent"
        android:textColor="#ff009900"
        android:layout_height="wrap_content"
        android:text="editor"
        android:textStyle="bold"
        android:layout_below="@id/nom"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editeur"
        android:text="1 2 3"
        android:textColor="#ff02a9ff"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toStartOf="@+id/fini"
     />

    <ImageView
        android:id="@+id/fini"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textStyle="bold|italic"
        android:textColor="#ff28ff5f"
        android:text="-"
        android:src="@drawable/cross"
        android:typeface="serif"
        android:layout_alignTop="@id/numero"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/manquant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:text="liste manquante"
        android:textColor="#ffff0e1c"
        android:textStyle="italic"
        android:layout_below="@+id/numero"/>
    <TextView
        android:id="@+id/bd_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@+id/manquant"/>


        />


</RelativeLayout >
