<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/manquant_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/address_book" />/>

    <TextView
        android:id="@+id/manquant_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/manquant_imageView"
        android:text="serie"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manquant_editeur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manquant_serie"
        android:layout_toEndOf="@+id/manquant_imageView"
        android:text="editeur"
        android:textColor="#ff009900"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manquant_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manquant_editeur"
        android:layout_toEndOf="@+id/manquant_imageView"
        android:text="nom"
        android:textColor="#ff02a9ff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manquant_bd_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="#ffffff"
        android:text="1"
        android:layout_below="@+id/manquant_nom"
        android:layout_toEndOf="@+id/manquant_imageView" />

    <TextView
        android:id="@+id/manquant_serie_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="#ffffff"
        android:text="2"
        android:layout_below="@+id/manquant_bd_id"
        android:layout_toStartOf="@+id/manquant_bd_id" />

    <Button
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/manquant_button"
        android:typeface="serif"
        android:longClickable="true"
        android:layout_below="@+id/manquant_serie"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/manquant_nom"
        android:layout_marginRight="10dp"/>


</RelativeLayout>
