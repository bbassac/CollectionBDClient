<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/black</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">#ff009900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PossedeText">
        <item name="android:textColor">#ff02a9ff</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ManquanteText">
        <item name="android:textColor">#ffff0e1c</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FilterText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LayoutBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ListViewDivider">
        <item name="android:divider">#dfc11f</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
