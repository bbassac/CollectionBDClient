<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/BlackText</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/WhiteText</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/WhiteText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/GreenText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PossedeText">
        <item name="android:textColor">@color/BlueText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ManquanteText">
        <item name="android:textColor">@color/RedText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FilterText">
        <item name="android:background">@color/BlackText</item>
        <item name="android:textColor">@color/WhiteText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LayoutBackground">
        <item name="android:background">@color/BlackText</item>
    </style>

    <style name="ListViewDivider">
        <item name="android:divider">@color/GoldBorder</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
